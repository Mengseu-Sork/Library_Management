{
  "compilerOptions": {
    "target": "ES2016",           // Supports .includes()
    "lib": ["ES2016", "DOM"],     // Include standard JavaScript and DOM libs
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "rootDir": "src"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}